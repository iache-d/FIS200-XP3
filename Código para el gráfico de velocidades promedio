import numpy as np
import matplotlib.pyplot as plt

tiempo = np.linspace(0, 5, 100)
v0 = 1.537  # Velocidad inicial en m/s
aceleraciones = [0.357, 0.319, 0.147]  # Aceleraciones de cada caso
errores_aceleracion = [0.041, 0.038, 0.009]  # Errores de las aceleraciones
error_tiempo = 1 / 60  # Error en el tiempo


errores_velocidad = [a * 5 for a in errores_aceleracion]
error_velocidad_max = max(errores_velocidad)


for a in aceleraciones:
    velocidad = v0 + a * tiempo  # Calculando la velocidad
    plt.plot(tiempo, velocidad, label=f"Aceleración = {a} m/s²")


plt.xlabel(f"(Tiempo ± {error_tiempo:.5f}) s")
plt.ylabel(f"(Velocidad ± {error_velocidad_max:.3f} m/s)")
plt.legend()
plt.grid()
plt.savefig("grafico_velocidades_promedio.png", dpi=300)
plt.show()
